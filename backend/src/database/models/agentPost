import mongoose, { Schema, Document } from 'mongoose';

interface IAgentPost extends Document {
  agentId: mongoose.Types.ObjectId;
  date: Date;
  image?: string;
  text?: string;
  likes?: mongoose.Types.ObjectId[];
  comments?: {
    id: mongoose.Types.ObjectId;
    text: string;
  }[];
}

const agentPostSchema: Schema = new Schema({
  agentId: {
    type: Schema.Types.ObjectId,
    ref: 'agentschema',
    required: true,
  },
  date: {
    type: Date,
    default: Date.now,
  
  },
  image: {
    type: String,
  },
  text: {
    type: String,
  },
  likes: [{
    type: Schema.Types.ObjectId,
    ref: 'userschema',
  }],
  comments: [{
    id: {
      type: Schema.Types.ObjectId,
      ref: 'userchema',
    },
    text: {
      type: String,
    },
  }],
});

const AgentPost = mongoose.model<IAgentPost>('AgentPost', agentPostSchema);

export default AgentPost;
